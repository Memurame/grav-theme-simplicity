{% extends 'partials/base.html.twig' %}

{% block content %}

  <section class="page page-entrylist">
      <h2 class="heading">{{ page.header.title }}</h2>
      <a href="{{ home_url }}" class="backlink">{{ "THEME_SIMPLICITY.FRONTEND.BACK" | t  }}</a>
      <div class="entry-filters">
          <button data-filter="" class="filter-button active">Alle</button>
      </div>
      <article class="entrylist layout-{{ page.header.layout }}">
          {% for item in page.children() %}

              <article class="entry-item {{ item.header.tags | join(' ') }}">
                  <div class="item-image">
                      {% if item.header.preview.image %}
                          {% set preview_image = item.header.preview.image | first %}
                          <img src="{{ preview_image.path }}">
                      {% else %}
                          <img src="{{ theme_url }}/images/default_image.jpg">
                      {% endif %}

                  </div>
                  <div class="item-desc">
                      <strong class="title">{{ item.header.title }}</strong>
                      <p>{{ item.header.preview.text }}</p>

                      {% if  item.header.tags %}
                          <div class="tags">

                              <small>Tags: </small>
                              {% for tag in item.header.tags %}
                                  <span class="entry-tag">{{ tag }}</span>
                              {% endfor %}
                          </div>
                      {% endif %}

                      <a href="{{ item.url(true) }}"><i class="fas fa-external-link-alt"></i> {{ "THEME_SIMPLICITY.FRONTEND.PROJEKTLINK" | t  }}</a>
                  </div>
              </article>


          {% endfor %}
      </article>
  </section>

{% endblock %}


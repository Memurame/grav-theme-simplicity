{% extends 'partials/base.html.twig' %}

{% block content %}

  <section class="page page-entry">
      <h2 class="heading">{{ page.header.title }}</h2>
      <a href="{{ base_url_absolute }}{{ page.parent().url() }}" class="backlink">{{ "THEME_SIMPLICITY.FRONTEND.BACK" | t  }}</a>
      <article class="entry-detail">
          <article class="detail-preview">
              <div class="preview-image">
                  {% if page.header.preview.image %}
                      {% set preview_image = page.header.preview.image | first %}
                      <img src="{{ base_url_absolute }}/{{ preview_image.path }}" alt="Vorschau Bild">
                  {% else %}
                      <img src="{{ theme_url }}/images/default_image.jpg">
                  {% endif %}
              </div>
              <div class="preview-desc">
                  <p>{{ page.header.preview.text }}</p>
              </div>
          </article>
          <article class="detail-detail markdown">
              {{ page.header.detail.text  | markdown}}
          </article>
          {% if page.header.gallerie %}
              <article class="detail-gallerie">
                  {% for img in page.header.gallerie | split(',')%}
                      <article style="background-image: url('{{ page.media[img].cropZoom(400,400).url }}')" data-src="{{ page.media[img].cropZoom(1280,720).url }}"></article>
                  {% endfor %}

              </article>
          {% endif %}
          <footer>
              {% if  page.header.tags %}
                  <div class="tags">

                      <small>Tags: </small>
                      {% for tag in page.header.tags %}
                          <span class="entry-tag">{{ tag }}</span>
                      {% endfor %}
                  </div>
              {% endif %}
              <div class="entry-info">
                  <strong>{{ "THEME_SIMPLICITY.FRONTEND.CREATED" | t  }}:</strong> {{ page.date() | date('t. m. Y') }}
              </div>
          </footer>

      </article>
  </section>

{% endblock %}


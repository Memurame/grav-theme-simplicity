{% extends 'partials/base.html.twig' %}

{% block content %}
    <section class="page page-default">
        <h2 class="heading">{{ page.header.title }}</h2>
        <a href="{{ base_url_absolute }}{{ page.parent().url() }}" class="backlink">{{ "THEME_SIMPLICITY.FRONTEND.BACK" | t  }}</a>
        <article class="content">
            {{ page.header.text | markdown }}
            <footer>
                {% if  page.header.tags %}
                    <div class="tags">

                        <small>Tags: </small>
                        {% for tag in page.header.tags %}
                            <span class="entry-tag">{{ tag }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="entry-info">
                    <strong>{{ "THEME_SIMPLICITY.FRONTEND.CREATED" | t  }}:</strong> {{ page.date() | date('d. m. Y') }}
                </div>
            </footer>
        </article>
    </section>
{% endblock %}
